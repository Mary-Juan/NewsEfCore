@using NewsEfCore.ViewModels
@model LoginUserViewModel

@{
    ViewData["Title"] = "Login Page";
}

<form asp-action="Login" method="post">
    <div class="form-group">
        <label>UserName</label>
        <input asp-for=UserName type="text" class="form-control" placeholder="Enter username">
        <span asp-validation-for="UserName"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input asp-for=Password type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        <span asp-validation-for="Password"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>

